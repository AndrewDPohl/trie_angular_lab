<!DOCTYPE html>
<html>
<head>
  <title>TrieAngularContactApp</title>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.12/angular.min.js"></script>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body ng-app="ContactApp">
  <div ng-controller="ContactsCtrl">
    <form ng-submit="addContact()">
      <div>
        <input type="text" ng-model="newContact.name" placeholder="Name"><br>
        <input type="text" ng-model="newContact.cell" placeholder="Cell Number"><br>
        <input type="text" ng-model="newContact.home" placeholder="Home Number"><br>
        <input type="text" ng-model="newContact.address" placeholder="Address">
      </div>
      <div>
        <button>Add Contact</button>
      </div>
    </form>

    <div ng-repeat="contact in contactsCtrl.contacts">
      {{contact.name}}
      {{contact.cell}}
      {{contact.home}}
      {{contact.address}}
    </div>

  </div>


</body>
</html>
